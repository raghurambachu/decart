<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="register flex flex-col align-center justify-center">
    <% if(errors && errors.length > 0){ %>
    <ul class="errors">
      <% errors.forEach((error,index) => { %>
      <li class="error"><span><%= (index + 1) %>.</span> <%= error %></li>
      <% }) %>
    </ul>

    <% } %>
    <h3>
      <a href="/">
        Vendor Registration
      </a>
    </h3>
    <section class="register-section flex flex-col justify-center align-center">
      <h3>
        Sign up with credentials
      </h3>
      <form class="register-form" action="/vendors/register" method="POST">
        <div class="form-group">
          <label for="username">USERNAME</label>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Username"
          />
        </div>
        <div class="form-group">
          <label for="email">EMAIL</label>
          <input type="email" id="email" name="email" placeholder="Email" />
        </div>
        <div class="form-group">
          <label for="password">PASSWORD</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
          />
        </div>
        <button class="btn btn-register" type="submit">Register</button>
      </form>
    </section>
  </body>
</html>
